<mvc:View
    controllerName="amalisov.cuibono.controller.CalculatedBonus"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:svm="sap.ui.comp.smartvariants"
    core:require="{
		formatter: 'amalisov/cuibono/model/formatter'
	}"
>
    <f:DynamicPage>
        <f:header>
            <core:Fragment
                fragmentName="amalisov.cuibono.view.fragments.CalculatedFilter"
                type="XML"
            />
        </f:header>
        <f:content>
            <Table
                id="Table"
                inset="false" 
                items="{payable>/ParticipantData}"
                class="participantTable"
                growing="true"
                growingScrollToLoad="true"
                growingThreshold="50"
                busyIndicatorDelay="{config>delay}"
            >
                <headerToolbar>
                    <Toolbar class="sapUiSmallMarginBottom">
                        <Title text="{i18n>calculatedHeader}" />
                        <ToolbarSpacer />
                        <Button
                            icon="sap-icon://sort"
                            id="sortParticipant"
                            press=".onOpenSortDialog"
                        />
                        <core:Fragment
                            fragmentName="amalisov.cuibono.view.fragments.SortDialog"
                            type="XML"
                        />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Label text="{i18n>localId}" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Label text="{i18n>name}" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Label text="{i18n>fiscalYear}" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Label text="{i18n>calculatedAmount}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Text text="{path:'payable>localId', formatter:'formatter.limitText'}" tooltip="{payable>localId}" />
                            <Text text="{payable>name}" />
                            <Text text="{payable>fiscalYear}" />
                            <Text text="{path:'payable>netAmount', formatter:'formatter.formatAmount'}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
