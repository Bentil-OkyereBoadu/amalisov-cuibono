<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="editDialog"
        title="{i18n>addTitle}"
        class="sapUiResponsiveContentPadding"
        contentWidth="20%"
    >
        <content>
            <Label text="{i18n>trancheName}" />
            <Input
                id="targetName"
                required="true"
                type="Text"
                class="sapUiSmallMarginBottom"
                value="{newTargets>/name}"
            />

            <Label text="{i18n>targetWeight}" />
            <Input
                id="targetWeight"
                required="true"
                type="Number"
                class="sapUiSmallMarginBottom"
                value="{newTargets>/weight}"
            />

            <Label text="{i18n>targetAchievement}" />
            <Input
                id="targetAchievement"
                required="true"
                type="Number"
                class="sapUiSmallMarginBottom"
                value="{newTargets>/achievement}"
            />

            <Label text="{i18n>trancheDescription}" />
            <TextArea
                id="targetDescription"
                rows="3"
                width="100%"
                value="{newTargets>/description}"
            />
        </content>
        <buttons>
            <Button
                text="{i18n>save}"
                press=".onSave"
            />
            <Button
                text="{i18n>cancel}"
                press=".closeAddTarget"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
