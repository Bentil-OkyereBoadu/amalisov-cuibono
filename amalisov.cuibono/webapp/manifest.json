{
	"_version": "1.12.0",

	"sap.app": {
		"id": "amalisov.cuibono",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"title": "{{appTitle}}",
		"description": "{{appDescription}}",
		"applicationVersion": {
			"version": "${version}"
		},
		"dataSources": {
			"bonusTranche": {
				"uri": "/odata/v4/bonusTranche/",
				"type": "OData",
				"settings": {
					"odataVersion": "4.0"
				}
			},
			"participant": {
				"uri": "/odata/v4/tranchParticipation/",
				"type": "OData",
				"settings": {
					"odataVersion": "4.0"
				}
			},
			"target": {
				"uri": "/odata/v4/targetAmount/",
				"type": "OData",
				"settings": {
					"odataVersion": "4.0"
				}
			}
		}
	},

	"sap.ui": {
		"technology": "UI5",
		"icons": {},
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		}
	},

	"sap.ui5": {
		"rootView": {
			"viewName": "amalisov.cuibono.view.App",
			"type": "XML",
			"async": true,
			"id": "app"
		},

		"resources": {
			"css": [
			  {
				"uri": "css/style.css"
			  }
			]
		},

		"dependencies": {
			"minUI5Version": "1.121.0",
			"libs": {
				"sap.m": {},
				"sap.f": {},
				"sap.ui.comp": {},
				"sap.ui.core": {},
				"sap.ui.fl": {}
			}
		},

		"handleValidation": true,

		"contentDensities": {
			"compact": true,
			"cozy": true
		},

		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "amalisov.cuibono.i18n.i18n"
				}
			},

			"tranchesBind": {
				"type": "sap.ui.model.odata.v4.ODataModel",
				"dataSource": "bonusTranche",
				"preload": true,
				"settings": {
					"synchronizationMode": "None",
					"groupId": "$direct",
					"metadataUrlParams": {
						"sap-documentation": "heading"
					},
					"operationMode": "Server"
				}
			},
			"tranches": {
				"type": "sap.ui.model.json.JSONModel",
				"uri": "tranches.json"
			  },
			  "participant": {
				"type": "sap.ui.model.json.JSONModel",
				"uri": "participant.json"
			},

			"participantBind": {
				"type": "sap.ui.model.odata.v4.ODataModel",
				"dataSource": "participant",
				"preload": true,
				"settings": {
					"synchronizationMode": "None",
					"groupId": "$direct",
					"metadataUrlParams": {
						"sap-documentation": "heading"
					}
				}
			}
		},

		"routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"viewType": "XML",
				"viewPath": "amalisov.cuibono.view",
				"controlId": "app",
				"controlAggregation": "pages",
				"async": true
			},
			"routes": [
				{
					"pattern": "",
					"name": "main",
					"target": "main"

				},{
					"pattern": "Create-tranche",
					"name": "CreateTranche",
					"target": "CreateTranche"
				},{
					"pattern": "edit-tranche",
					"name": "EditBonusTranche",
					"target": "EditBonusTranche"

				},
				{
					"pattern": "participant",
					"name": "participants",
					"target": "participants"
				},
				{
					"pattern": "tranche-participants",
					"name": "trancheParticipants",
					"target": "participants"
				}
			],
			"targets": {
				"main": {
					"viewId": "main",

					"viewName": "Main",
					"viewLevel": 0
				},
				"CreateTranche": {
					"viewId": "EditBonusTranche",
					"viewName": "EditBonusTranche",
					"viewLevel": 1
				},"EditBonusTranche": {
					"viewId": "EditBonusTranche",
					"viewName": "EditBonusTranche",
					"viewLevel": 2
				},
				"participants": {
					"viewId": "participants",
					"viewName": "Participants",
				
					"viewLevel": 0
				}
			}
		}
	}
}
